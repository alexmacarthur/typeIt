{
  "name": "typeit",
  "version": "7.0.4",
  "description": "The most versatile animated typing utility on the planet.",
  "author": "Alex MacArthur <alex@macarthur.me> (https://macarthur.me)",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/alexmacarthur/typeit/issues"
  },
  "homepage": "https://typeitjs.com",
  "main": "dist/typeit.min.js",
  "module": "dist/typeit.es.min.js",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "rollup": "NODE_ENV=production rollup -c",
    "watch": "NODE_ENV=development rollup -c -w",
    "build": "npm run rollup",
    "serve": "concurrently --kill-others \"npm run watch\" \"node serve.js\"",
    "prettier": "prettier --write \"**/*.{md,js}\"",
    "test": "jest",
    "postinstall": "node ./notice.js"
  },
  "keywords": [
    "javascript",
    "animated",
    "typing",
    "typing effect",
    "typewriter",
    "typewriter effect",
    "type effect",
    "text effects"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmacarthur/typeit.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "husky": "^4.3.7",
    "jest-canvas-mock": "^2.3.0",
    "jest-cli": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.36.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-execute": "^1.1.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup.js"
    ],
    "setupFiles": [
      "./__tests__/setup.js",
      "jest-canvas-mock"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
